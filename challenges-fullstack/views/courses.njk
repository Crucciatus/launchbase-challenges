{% extends 'layout.njk' %}

{% block head %}
  <title>Cursos - Rocketseat</title>
{% endblock %}

{% block content %}

    <div class="wrapper">
      <h1>Cursos</h1>
    </div>

    <section class="courses">

      <div class="course" id="starter">
        <div class="course-starter">
          <div class="course-img">
            <img src="https://skylab.rocketseat.com.br/static/64c237ccff807c054339a62d53b4b402.svg" alt="">
          </div>

          <div class="description">
            <p><p class="starter">Torne-se um programador desejado</p> no mercado com esses cursos gratuitos</p>
          </div>

          <div class="course-modules">
            <p>5 modulos</p>
            <p class="course-price">Free</p>
          </div>
        </div>
      </div>

      <div class="course" id="launchbase">
        <div class="course-launchbase">
          <div class="course-img">
            <img src="https://skylab.rocketseat.com.br/static/0828532024cb46921a6b5e941f8d788d.svg" alt="">
          </div>

          <div class="description">
            <p><p class="launchbase">Domine a programação do zero</p> e tenha acesso às melhores oportunidades do mercado </p>
          </div>

          <div class="course-modules">
            <p>16 modulos</p>
            <p class="course-price">Pago</p>
          </div>
        </div>
      </div>

      <div class="course" id="gostack">
        <div class="course-gostack">
          <div class="course-img">
            <img src="https://skylab.rocketseat.com.br/static/83a178a0653dab1d55e2ed7946465975.svg" alt="">

          <div class="description">
            <p><p class="gostack">Treinamento imersivo</p> nas tecnologias mais modernas de desenvolvimento web e mobile</p>
          </div>

          <div class="course-modules">
            <p>20 modulos</p>
            <p class="course-price">Pago</p>
          </div>
          </div>
        </div>
      </div>
    </section>

    <div class="modal-overlay">
      <div class="modal">
        <a class="maximize-modal">
          <i class="material-icons" id="fullscreen">fullscreen</i>
        </a>
        <a class="close-modal">
          <i class="material-icons">close</i>
        </a>
        <div class="modal-content">
          <iframe src="" frameborder="0"></iframe>
        </div>
      </div>
    </div>

    <script src="../scripts.js"></script>

{% endblock %}